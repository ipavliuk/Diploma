@model BackendsDashboard.Models.AccountProjectsViewModel
@{
    ViewBag.Title = "Проекти користувача...";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <table class="table" id="products">
        <tr>
            <th> @Html.DisplayName("Id")</th>
            <th>@Html.DisplayName("Назва проекту")</th>
            <th>@Html.DisplayName("AppId")</th>
            <th>@Html.DisplayName("ApiKeyAccess")</th>
            <th>@Html.DisplayName("MasterKeyAccess")</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Projects)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApiKeyAccess)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MasterKeyAccess)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Ok" />
            </div>
        </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

